.panel {
  box-sizing: border-box;
  position: fixed;
  bottom: -600rpx;
  left: 0;
  right: 0;
  height: 600rpx;
  background-color: rgb(161, 224, 216);
  transition: all 0.2s ease;
  transform: translateY(0);
  z-index: 2;
  padding: 20rpx;
}

.showArea {
  width: 100vw;
  height: 80rpx;
}

.panel_up {
  transform: translateY(-600rpx);
}

.shade {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.p_row {
  display: flex;
}

.p_unit {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  position: relative;
}

view.p_unit {
  background-color: transparent;
  border-radius: 0;
  display: flex;
  flex-direction: column;
  height: 80rpx;
  align-content: space-around;
  line-height: 40rpx;
}

view.p_unit_disabled {
  background-color: transparent;
  color: rgba(255, 255, 255, 0.658);
}

.p_stopBooking {
  font-size: 18rpx;
}

.today_unit {
  color: red;
}

.selected_unit {
  color: blue;
}

.selected_unit .selected_unit_circle {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: block;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  border: 2px solid red;
}

.p_next_btn {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  font-size: 24rpx;
  color: blue;
  padding: 20rpx;
}

.periodList {
  height: 550rpx;
  overflow: hidden;
}

.periodList_box {
  text-align: center;
}
